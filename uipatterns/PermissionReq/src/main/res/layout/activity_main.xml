<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.ptu.footerreyclerview.MainActivity">


    <Button
        android:id="@+id/permission_btn"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/permission_btn"
        tools:layout_editor_absoluteX="0dp"></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
